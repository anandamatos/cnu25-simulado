// ROTA PROVA-QUESTIONS - ATUALIZADA PARA SUA ESTRUTURA
app.get('/api/prova-questions', (req, res) => {
    try {
        const { tipo, categoria, subcategoria, numQuestions } = req.query;
        const questionsPath = path.join(__dirname, 'questions.json');
        
        console.log('ğŸ¯ ROTA /api/prova-questions ACESSADA!');
        console.log('ğŸ“ ParÃ¢metros:', { tipo, categoria, subcategoria, numQuestions });
        
        if (!fs.existsSync(questionsPath)) {
            console.log('âŒ Arquivo questions.json nÃ£o encontrado');
            return res.json([]);
        }
        
        const data = fs.readFileSync(questionsPath, 'utf8');
        const questoesData = JSON.parse(data);
        let questaoFiltradas = questoesData.questoes || [];
        
        console.log(`ğŸ“š Total de questÃµes: ${questaoFiltradas.length}`);
        
        // Como suas questÃµes nÃ£o tÃªm campo "tipo", vamos definir baseado no eixo
        // Vamos considerar: Eixo 4 = especÃ­ficos, outros = gerais (ou ajuste conforme sua necessidade)
        if (tipo === 'gerais') {
            // Para gerais, vamos pegar questÃµes que NÃƒO sÃ£o do Eixo 4
            questaoFiltradas = questaoFiltradas.filter(q => q.eixo !== 'Eixo 4');
            console.log(`ğŸ“š QuestÃµes gerais apÃ³s filtro: ${questaoFiltradas.length}`);
            
            if (categoria && categoria !== 'completa') {
                questaoFiltradas = questaoFiltradas.filter(q => q.tema === categoria);
                console.log(`ğŸ“š ApÃ³s filtrar por tema "${categoria}": ${questaoFiltradas.length}`);
            }
            
        } else if (tipo === 'especificos') {
            // Para especÃ­ficos, vamos pegar apenas questÃµes do Eixo 4
            questaoFiltradas = questaoFiltradas.filter(q => q.eixo === 'Eixo 4');
            console.log(`ğŸ“š QuestÃµes especÃ­ficas apÃ³s filtro: ${questaoFiltradas.length}`);
            
            if (categoria && categoria !== 'completa') {
                questaoFiltradas = questaoFiltradas.filter(q => q.eixo === categoria);
                console.log(`ğŸ“š ApÃ³s filtrar por eixo "${categoria}": ${questaoFiltradas.length}`);
                
                if (subcategoria && subcategoria !== 'completa') {
                    questaoFiltradas = questaoFiltradas.filter(q => q.tema === subcategoria);
                    console.log(`ğŸ“š ApÃ³s filtrar por matÃ©ria "${subcategoria}": ${questaoFiltradas.length}`);
                }
            }
            
        } else if (tipo === 'objetiva') {
            // Prova objetiva completa - pegar todas as questÃµes
            console.log(`ğŸ“š Prova objetiva completa: ${questaoFiltradas.length}`);
        }
        
        // Embaralhar questÃµes
        questaoFiltradas = questaoFiltradas.sort(() => Math.random() - 0.5);
        
        // Limitar pelo nÃºmero de questÃµes solicitado
        let numQuestoes;
        if (numQuestions) {
            numQuestoes = parseInt(numQuestions);
        } else {
            // Valores padrÃ£o baseados no tipo
            if (tipo === 'objetiva') numQuestoes = 90;
            else if (tipo === 'gerais') numQuestoes = 30;
            else numQuestoes = 60;
        }
        
        questaoFiltradas = questaoFiltradas.slice(0, numQuestoes);
        
        console.log(`âœ… Retornando ${questaoFiltradas.length} questÃµes`);
        
        // Transformar para o formato esperado pelo frontend
        const questoesFormatadas = questaoFiltradas.map((questao, index) => {
            return {
                id: questao.id || index + 1,
                enunciado: questao.enunciado,
                alternativas: questao.alternativas || [],
                correct_option: questao.resposta_correta, // Sua estrutura usa resposta_correta
                explicacao: questao.explicacao,
                eixo: questao.eixo,
                tema: questao.tema,
                subtema: questao.subtema,
                dificuldade: questao.dificuldade
            };
        });
        
        // Log das primeiras 2 questÃµes para debug
        if (questoesFormatadas.length > 0) {
            console.log('ğŸ” Primeira questÃ£o formatada:', {
                id: questoesFormatadas[0].id,
                enunciado: questoesFormatadas[0].enunciado?.substring(0, 50) + '...',
                alternativas: questoesFormatadas[0].alternativas?.length,
                correct_option: questoesFormatadas[0].correct_option,
                eixo: questoesFormatadas[0].eixo,
                tema: questoesFormatadas[0].tema
            });
        }
        
        res.json(questoesFormatadas);
        
    } catch (error) {
        console.error('âŒ Erro:', error);
        res.status(500).json({ error: error.message });
    }
});

